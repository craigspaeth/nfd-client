@import '../../node_modules/nib'

light = 100
default-font-size = 15px
green-color = #3DB06F
bath-color = #6CC5E7
bed-color = #65A7E4
hover-green-color = #24A05A
red-color = #CC2B48
dark-gray-color = rgb(40, 40, 40)
light-gray-border-color = #ddd
gray-text-color = #aaa
warn-orange-color = #A88A13
default-border-radius = 4px
main-header-height = 57px
main-header-bg-color = #eee
container-width = 1000px

@keyframes spin
  0%
    transform rotate(0deg)
    animation-timing-function linear
  50%
    transform rotate(180deg)
    animation-timing-function linear
  100%
    transform rotate(360deg)
    animation-timing-function linear

spinner(size, bwidth)
  width size
  height size
  border-radius size
  border bwidth solid white
  border-left-color transparent
  position absolute
  left 50%
  top 50%
  margin-top ((-(size / 2)) - bwidth)
  margin-left ((-(size / 2)) - bwidth)
  animation spin 0.75s infinite


museo()
  font-family museo-sans, Helvetica, sans-serif
  font-smoothing antialiased
  text-rendering optimizeLegibility

appearance()
  vendor('appearance', arguments)

mask-repeat()
  vendor('mask-repeat', arguments)

mask-size()
  vendor('mask-size', arguments)

mask-image()
  vendor('mask-image', arguments)

font-smoothing()
  vendor('font-smoothing', arguments)

filter()
  vendor('filter', arguments)

font-face(family, filename, style = normal, weight = normal)
  @font-face
    font-family family
    font-weight weight
    font-style style
    src url("/fonts/" + filename + ".woff") format("woff")