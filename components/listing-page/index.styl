@import '../stylus-lib'

#listing-page-header
  campton()
  clearfix()
  margin 40px 0
  h1
    float left
    font-size 32px
    line-height 36px
    small
      font-size 14px
      text-transform uppercase
      letter-spacing 1px
      margin 0 25px 0 5px
  button
    float right


#listing-page-slideshow-container
  width 70%
  overflow hidden

#listing-page-slideshow
  width 9999px
  li
    float left
    margin-right 20px

#listing-page-slideshow-thumbnails
  img
    height 100px
    width @height