@import '../stylus-lib'

#auth-modal
  width 400px
  perspective 1000
  background transparent
  padding 0
  h2
    font-size 28px
    font-weight normal
    line-height 1em
  h4
    font-size 11px
    text-transform uppercase
    letter-spacing 1px
    margin-bottom 5px
    color #777

#auth-modal-signup, #auth-modal-login
  background white
  padding 30px
  border-radius default-border-radius
  display none

#auth-modal-form-container
  clearfix()
  margin-top 20px

#auth-modal-login-link, #auth-modal-signup-link
  font-size 13px

#auth-modal-logo
  width 80px
  height @width
  background center center no-repeat
  background-size contain
  margin auto
  position relative
  top -15px

#auth-modal-left
  float left
  border-right 1px solid light-gray-border-color
  padding-right 20px
  button
    margin-bottom 6px
    &:last-child
      margin-bottom 0

#auth-modal-right
  float right
  //  {padding-left 20px
  small
    font-size 12px
    text-align left
    margin-bottom 5px
    float left
    color #aaa

#auth-modal-left, #auth-modal-right
  width 50%

.auth-modal-error
  color red-color
  margin 5px
  font-size 13px

#auth-modal-thank-you, #auth-modal-login-welcome
  position absolute
  top 0
  left 0
  background red
  width 100%
  height 100%
  background green-color
  color white
  border-radius default-border-radius
  header
    position absolute
    top 50%
    margin-top -80px
    text-align center
    width 100%
    h2
      font-weight bold
      margin-bottom 25px
    h3
      font-size 18px
    .rounded-button
      display inline-block
      background hover-green-color
      width auto
      margin-top 40px

#auth-modal-right
  width 100%

// State of modal and animation properties between them
#auth-modal-thank-you, #auth-modal-login-welcome
  z-index -1
  transform rotateY(-180deg)
#auth-modal-signup, #auth-modal-login
  transform rotateY(0deg)
#auth-modal-thank-you, #auth-modal-signup, #auth-modal-login, #auth-modal-login-welcome
  transform-style preserve-3d
  transition 0.5s
  backface-visibility hidden

#auth-modal-container[data-state='thank-you']
  #auth-modal-thank-you
    transform rotateY(0deg)
    z-index inherit
  #auth-modal-signup
    transform rotateY(180deg)
    display block

#auth-modal-container[data-state='welcome-login']
  #auth-modal-login-welcome
    transform rotateY(0deg)
    z-index inherit
  #auth-modal-login
    transform rotateY(180deg)
    display block

#auth-modal-container[data-state='signup']
  #auth-modal-signup
    display block

#auth-modal-container[data-state='login']
  #auth-modal-login
    display block