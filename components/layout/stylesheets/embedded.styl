// Logo mark
#main-header.main-header-home #main-header-logo
  background-image url("/images/logo-long-gr.svg") !important
#main-header-logo
  background-image url('/images/logo-long-g.svg') !important
// Up triangle
.filters-alerts-popover::after
  background-image url("/images/up-triangle-g.svg") !important

// Full logo
#auth-modal-logo
  background-image url('/images/logo.svg') !important
  
// Down carrot
.filters-location-arrow
  background-image url('/images/down-carrot.svg') !important

// Down dash
.filters-location-arrow.filters-location-arrow-expanded
  background-image url('/images/down-dash.svg') !important
  
// Select arrows
.rounded-select
  background-image url('/images/select-arrows.svg') !important

// Filters dropdown lip
.filters-location-neighborhoods::after
  background-image url('/images/up-arrow.svg') !important
  
// Social Media
#main-header.main-header-home .main-header-social-media-twitter
  background-image url('/images/twitter-g.svg') !important
#main-header.main-header-home .main-header-social-media-facebook
  background-image url('/images/facebook-g.svg') !important
#main-header .main-header-social-media-facebook
  background-image url('/images/facebook.svg') !important
#main-header .main-header-social-media-twitter
  background-image url('/images/twitter.svg') !important
// Close modal
.modal-close
  background-image url('/images/modal-close.svg') !important

for typeface in 'aleo' 'campton'
  for weight in 100 300 600
    @font-face
      font-family typeface
      font-weight weight
      src url("/fonts/" + typeface + "-" + weight + ".woff") format("woff")
    @font-face
      font-family typeface
      font-weight weight
      font-style italic
      src url("/fonts/" + typeface + "-" + weight + "-italic.woff") format("woff")