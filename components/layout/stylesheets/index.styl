@import './main-header'
@import './form-elements'
@import '../../stylus-lib'
@import '../../home-page'
@import '../../filters'
@import '../../listings'
@import '../../about-page'
@import '../../feedback-modal'
@import '../../modal'
@import '../../signup-modal'
@import './embedded'

global-reset()

body
  color dark-gray-color
  font-size default-font-size
  museo()
  line-height 1.4em
  padding-top main-header-height
*
  box-sizing border-box
a
  color green-color
  transition background-color 0.3s
  cursor pointer
  &:hover
    color hover-green-color
    text-decoration underline

strong
  font-weight bold
em
  font-style italic
.loading-spinner
  width 40px
  height @width
  border-radius @width
  border 3px solid green-color
  .loading-spinner-dot
    width 10px
    height 42px
    border-top 5px solid white
    margin -3px auto 0 auto
    animation spin 0.5s infinite
    content '.'
    color transparent